---
const offre = Astro.props;
---

<div
    class="p-5 max-w-sm mx-auto bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200"
>
    <div class="p-4">
        <h2 class="text-lg font-semibold text-gray-800">{offre.nom_maison}</h2>
        <ul class="mt-2 text-gray-600 space-y-1">
            <li class="flex items-center gap-2">
                <span class="font-medium">Adresse :</span>
                {offre.adresse}
            </li>
            <li class="flex items-center gap-2">
                <span class="font-medium">Prix :</span>
                {offre.prix} â‚¬
            </li>
        </ul>
    </div>
    <div class="relative">
        <img
            src={offre.image_maison_url}
            alt={offre.nom_maison}
            class="w-full h-48 object-cover rounded-t-lg"
        />
        <button
            class="absolute top-3 right-3 bg-white p-1 rounded-full shadow-md hover:bg-gray-200 transition duration-200 ease-in-out"
        >
            <img src="/assets/favorite.png" alt="Favori" class="w-6 h-6" />
        </button>
    </div>
    <div class="p-4">
        <a
            href={`/offres/${offre.id}`}
            class="block text-center bg-blue-500 text-white font-semibold py-2 rounded-lg hover:bg-blue-600 transition duration-200 ease-in-out"
        >
            Voir plus
        </a>
    </div>
</div>
